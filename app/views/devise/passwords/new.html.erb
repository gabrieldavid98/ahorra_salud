<%= render layout: "layouts/form_positioner", locals: { title: "¿Olvido su contraseña?" } do %>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <fieldset class="uk-fieldset">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "uk-input uk-margin-bottom", placeholder: "Email" %>
      <div class="uk-text-center">
        <%= f.submit "Reestrablecer Contraseña", class: "uk-button uk-button-primary uk-margin-bottom" %>
      </div>
    </fieldset>
  <% end %>
  <%= render "devise/shared/links" %>
  <div class="uk-margin-large-top uk-text-small">
    <%= link_to root_path do %>
      <div class="uk-flex uk-flex-middle">
        <div>
          <uk-icon icon="chevron-left" width="16" height="16" />
        </div>
        Regresar
      </div>
    <% end %>
  </div>
<% end %>
